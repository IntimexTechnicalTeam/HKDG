@{
    
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="container" class="login-page">
  <div class="login-box">
    <img src="/imgs/logo.png" class="logo">

    <form id="login-form">
      <div class="form-group">
        <label>@Resources.ToMultiLang("AccountNo",ViewBag.Lang)</label>
        <input type="text" name="accountNo" placeholder="e.g. your@email.address" v-model="accountNo" @@keyup.enter="signIn" />
      </div>
      <div class="form-group password">
        <label>密碼</label>
        <input type="password" name="password" v-model="password" @@keyup.enter="signIn" />
        <a href="javascript:;" class="forget">忘記密碼？</a>
      </div>

      <div class="login-btns">
        <button type="button" @@click="signIn">登入</button>
        <span>或</span>
        <button><img src="/imgs/icons/fb-green.png"> 以FACEBOOK賬號繼續</button>

        <span>還沒加入擺檔？<a href="javascript:;">註冊</a></span>
      </div>
    </form>
  </div>
</div>

@section scripts{
  <script type="text/javascript">
    var jsMessage = {
      EnterEmail: '@Resources.ToMultiLang("EnterEmail",ViewBag.Lang)',
      EnterCorrectEmail: '@Resources.ToMultiLang("EnterCorrectEmail",ViewBag.Lang)',
      EnterPWD: '@Resources.ToMultiLang("EnterPWD",ViewBag.Lang)'
    }
  </script>
  <script type="text/javascript" src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script type="text/javascript" src="/js/page/login.js" asp-append-version="true"></script>
}