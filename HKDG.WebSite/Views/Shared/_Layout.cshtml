@{

    var IsMobile = ViewBag.IsMobile;
    var IspType = ViewBag.IspType;                  //运营类型    
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HKDG.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/HKDG.WebSite.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href=@Url.Content(Intimex.Utility.PathUtil.GetCss(IsMobile)) asp-append-version="true" />
</head>
<body>
    <header>
        @{
            if (IsMobile) await Html.RenderPartialAsync("~/Views/Shared/MobileHeader.cshtml");
            else  await Html.RenderPartialAsync("~/Views/Shared/Header.cshtml");
        }

    </header>
    @RenderBody()
    @Html.Raw(TempData["MenuBarDatas"])
    <footer class="border-top footer text-muted">

        @{
            if (IsMobile) await Html.RenderPartialAsync("~/Views/Shared/MobileFooter.cshtml");
            else await Html.RenderPartialAsync("~/Views/Shared/Footer.cshtml");
        }

    </footer>
    
    <script src="~/lib/vue/vue.global.js"></script>
    <script type="text/javascript">
        const { createApp } = Vue
    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.cookie.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/header.js" asp-append-version="true"></script>
    <script src="~/js/footer.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
