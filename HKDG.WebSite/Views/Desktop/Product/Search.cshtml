@{    
  ViewData["Title"] = Resources.ToMultiLang("SearchProduct");
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="container" class="search-pro-page" v-cloak>
  <div class="mid-box">
  	<div class="screen-box">
      <div class="screen-list">
        
      </div>

      <div class="btn-group">
        <button @@click="isGrid = !isGrid"><img v-bind:src="isGrid ? '/imgs/icons/layout1.png' : '/imgs/icons/layout2.png'"></button>
        <button><img src="/imgs/icons/classify.png"></button>
      </div>
    </div>

    <template v-if="totalRecord">
      <p class="pros-num">{{totalRecord}}@Resources.ToMultiLang("ProsNum")</p>

      <pro-list :data="proData" :totalpage="totalPage" :grid="isGrid" @@load="search"></pro-list>
    </template>

    <div class="none" v-else>
      @Resources.ToMultiLang("NoSearch")
    </div>
  </div>
</div>

@section scripts{
	<script src="/js/components/ProList.js"></script>
	<script src="/js/page/search.js"></script>
}